    "img_axes" : [[0,2],[1,2]],//,[1,2]],
    "num_imgs" : 2,
    "rotation" : [0,0],//,180],
    /**/
    // string to describe + differentiate from images 
    //    here we use the direction taken from
    "img_names": ["frontal", "left"],
    "shapes_to_skip_fit": [["Airway", "RML"], 
                            ["Airway", "RUL", "RML", "RLL"], 
                            // ["Airway"]
                            // ["RUL", "RML", "RLL"] // 45 deg 
                            // ["Airway", "LUL", "LLL"]
                          ],
  },
  "test-set":
  {
    // outline dirs
    // "outlines" : ["DRRs/luna16/{}/drr-outline-{}.csv",],
    "outlines" : ["DRRs/luna16/{}/drr-outline-{}.csv",
                  "DRRs/luna16/{}/drr-outline-{}-lateral-left.csv",
                  // "DRRs/luna16/{}/drr-outline-{}-lateral-right.csv",
                ],
    "contrast" : "False",
    "contrast-outline" : ["DRRs/luna16/{}/drr-outline-{}-contrast2000.csv",],
