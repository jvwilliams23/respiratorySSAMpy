{
  // configuration for CNN training
  // file must be read with hjson 'pip install hjson', or remove comments
  "luna16paths" :
  {
    //  training data images
    "drrs" : "DRRs/luna16/..../drr-....-frontal.png",
    // "drrs" : "DRRs/luna16/..../drr-....-contrast2000.png",
    "drrs_left" : "DRRs/luna16/..../drr-....-lateral-left.png",
    "drrs_right" : "DRRs/luna16/..../drr-....-lateral-right.png",
    "drrs_-45" : "DRRs/luna16/..../drr-....-angle--45.png",
    "spacing" : "DRRs/luna16/..../drr-drr-spacing-.....md",
    "origins" : "DRRs/luna16/origins/drr-origins-.....md",
    // training data labelmaps
    "landmarks" : "allLandmarks_noFissures/allLandmarks.....csv",
    "projLM_ID_file" : "allLandmarks_noFissures/projectedMeanLandmarksID{}_multiproj{}.csv"
  },
  "training":
  {
    "img_keys" : ["drrs", "drrs_left"],
    /*
    "img_axes" : [[0,2]],
    "num_imgs": 1,
    "rotation": [0],
    */
    /*
    "img_axes" : [[0,2],[1,2]],
    "num_imgs" : 2,
    "rotation" : [0,0],
    */
